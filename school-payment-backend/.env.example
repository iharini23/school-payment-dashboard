# Copy this file to `.env` and fill in the values before starting the server.
# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/school-payments

# JWT configuration
JWT_SECRET=replace-me-with-a-secure-secret
JWT_EXPIRY=3600s

# Payment gateway credentials
PG_KEY=replace-with-gateway-key
PG_API_KEY=replace-with-gateway-api-key
PG_API_URL=https://api.example-payment-gateway.com/payments

# Default school identifier used when initiating payments
SCHOOL_ID=YOUR_SCHOOL_ID

# Demo mode toggles
USE_IN_MEMORY_DB=true
USE_DEMO_DATA=true
